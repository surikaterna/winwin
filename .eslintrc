{
    "extends": "airbnb/legacy",
    "rules": {
        "indent": [2, 2],
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "semi": 0,
        "strict": 0,
        "func-names": 0,
        "id-length": 0,
        "vars-on-top": 0,
        "comma-dangle": 0
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "ecmaFeatures": {
        "modules": true,
        "classes": true,
        "experimentalObjectRestSpread": true
    }
}
